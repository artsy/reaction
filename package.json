{
  "name": "reaction-force",
  "version": "0.1.0",
  "description": "Force’s React Components",
  "main": "dist/apps/index.js",
  "repository": "https://github.com/artsy/reaction-force.git",
  "author": "Eloy Durán <eloy.de.enige@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "storybook": "rm -rf .fusebox/cache && node_modules/.bin/gulp storybook",
    "start": "rm -rf .fusebox/cache && node_modules/.bin/gulp start",
    "deploy-storybook": "storybook-to-ghpages",
    "relay2ts": "relay2ts src/components/*.tsx --update",
    "sync-schema": "cd externals/metaphysics && git fetch && git checkout origin/master && yarn install && npm run dump-schema -- ../../data",
    "sync-colors": "cd externals/elan && git fetch && git checkout origin/master && cp components/lib/variables/colors.json ../../data",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "type-check": "tsc --noEmit --pretty"
  },
  "prepush": [
    "lint",
    "type-check",
    "test"
  ],
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "@kadira/storybook-addons": "^1.6.1",
    "@kadira/storybook-deployer": "^1.2.0",
    "@types/backbone": "^1.3.33",
    "@types/body-parser": "^1.16.1",
    "@types/cookie-parser": "^1.3.30",
    "@types/csurf": "^1.9.33",
    "@types/express": "^4.0.35",
    "@types/express-session": "^0.0.32",
    "@types/jest": "^18.1.1",
    "@types/passport": "^0.3.3",
    "@types/react": "^15.0.7",
    "@types/react-relay": "^0.9.11",
    "awesome-typescript-loader": "^3.0.5",
    "babel-plugin-react-relay": "^0.10.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "babel-relay-plugin": "https://github.com/alloy/relay/releases/download/v0.9.3/babel-relay-plugin-0.9.3.tgz",
    "dotenv": "^4.0.0",
    "fuse-box": "latest",
    "graphql-config-parser": "^1.2.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-clean": "^0.3.2",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-tsc": "^1.3.0",
    "gulp-typescript": "^3.1.6",
    "jest": "^18.1.0",
    "pre-push": "^0.1.1",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "relay2ts": "^0.2.0",
    "ts-jest": "^18.0.3",
    "tslint": "^4.5.0",
    "tslint-eslint-rules": "^3.4.0",
    "tslint-react": "^2.4.0",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "artsy-passport": "^1.6.1",
    "artsy-xapp": "^1.0.4",
    "asap": "https://github.com/alloy/asap.git",
    "lodash": "^4.17.4",
    "numeral": "^2.0.4",
    "backbone": "^1.3.3",
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "express-session": "^1.15.1",
    "isomorphic-relay": "^0.7.4",
    "react": "^15.4.2",
    "react-relay": "https://github.com/alloy/relay/releases/download/v0.9.3/react-relay-0.9.3.tgz",
    "styled-components": "^1.4.3"
  },
  "graphql": {
    "file": "data/schema.json",
    "tsInterfaceName": "RelayProps"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
